// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  email         String
  name          String
  password      String
  phone_number  String
  address       String
  role          Role_User @default(user)
  referral_code String
  active        Int       @default(1)
  image         String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  Event               Event[]
  Transaction         Transaction[]
  Event_Rating        Event_Rating[]
  User_Event_Ticket   User_Event_Ticket[]
  userWhoHaveReferral Referral_code[]     @relation("userWhoHaveReferral")
  userWhoUseReferral  Referral_code[]     @relation("userWhoUseReferral")
}

model Event {
  id String @id @default(uuid())

  organizer    User   @relation(fields: [organizer_id], references: [id])
  organizer_id String

  title       String
  location    String
  description String
  date        DateTime
  status      Event_Status @default(pending)
  active      Int          @default(1)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  Event_Ticket      Event_Ticket[]
  User_Event_Ticket User_Event_Ticket[]
  Event_Category    Event_Category[]
  Event_Image       Event_Image[]
  Event_Rating      Event_Rating[]
  Transaction       Transaction[]
}

model Category {
  id             Int              @id @default(autoincrement())
  name           String
  Event_Category Event_Category[]
}

model Event_Image {
  id String @id @default(uuid())

  event    Event  @relation(fields: [event_id], references: [id])
  event_id String

  filename String
}

enum Event_Status {
  pending
  approved
}

model Event_Category {
  id Int @id @default(autoincrement())

  category    Category @relation(fields: [category_id], references: [id])
  category_id Int

  event    Event  @relation(fields: [event_id], references: [id])
  event_id String
}

model Event_Ticket {
  id String @id @default(uuid())

  event    Event  @relation(fields: [event_id], references: [id])
  event_id String
  category String
  quota    Int
  code     String
}

model User_Event_Ticket {
  id String @id @default(uuid())

  event_ticket    Event  @relation(fields: [event_ticket_id], references: [id])
  event_ticket_id String

  user    User   @relation(fields: [user_id], references: [id])
  user_id String
  qty     Int
}

model Transaction {
  id String @id @default(uuid())

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  event    Event  @relation(fields: [event_id], references: [id])
  event_id String

  price Int

  referral_used String
  referral      Referral_code @relation(fields: [referral_used], references: [id])
}

model Event_Rating {
  id String @id @default(uuid())

  users_id String
  users    User   @relation(fields: [users_id], references: [id])

  event_id String
  event    Event  @relation(fields: [event_id], references: [id])

  rating Float
  review String @db.LongText
}

model Referral_code {
  id    String @id @default(uuid())
  price Int

  user_id String
  user    User   @relation(fields: [user_id], references: [id], name: "userWhoHaveReferral")

  references_id String
  references    User   @relation(fields: [references_id], references: [id], name: "userWhoUseReferral")

  exp_date    DateTime
  Transaction Transaction[]
}

enum Role_User {
  super_admin
  admin
  organizer
  user
}
